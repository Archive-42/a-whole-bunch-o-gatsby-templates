{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "indent": [
      "error",
      2, {
        "SwitchCase": 1
      }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "double",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ],
    "semi": [
      "error",
      "always"
    ],
    "guard-for-in": 2,
    "no-alert": 2,
    "no-eval": 2,
    "no-eq-null": 2,
    "no-bitwise": 2,
    "no-nested-ternary": 2,
    "no-trailing-spaces": 1,
    "no-tabs": 2,
    "eqeqeq": 2
  }
}
