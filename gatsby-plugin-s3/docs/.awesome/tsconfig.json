{
  "compileOnSave": true,
  "compilerOptions": {
    "alwaysStrict": true,
    "diagnostics": true,
    "emitBOM": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "lib": [ "dom", "dom.iterable", "scripthost", "es5", "es6", "es7", "esnext" ],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "newLine": "lf",
    "noErrorTruncation": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "build",
    "preserveWatchOutput": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "sourceMap": true,
    "strictBindCallApply": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "target": "esnext"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*"
  ],
  "typeRoots" : [
    "./typings"
  ]
}
