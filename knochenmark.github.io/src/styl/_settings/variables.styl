/*
* Variables
*
* 1. Colors
* 2. Spaces
* 3. Typography
* 4. Fonts
* 5. Dimensions
*
*/



// 1. Colors
// --------------------------------------------------

// Grays
$white = #fff
$gray-lighter = #ecf0f1
$gray-light = #bdc3c7
$gray = #7f8c8d
$gray-dark = #34495e
$gray-darker = #2c3e50

// Hexas
$green = #27ae60
$yellow = #f1c40f
$red = #c0392b
$blue = #2980b9
$blue-light = #3498db

// Mondrian
$mondrianRed = red
$mondrianBlue = darkblue
$mondrianYellow = yellow

// Brands
$text-color = $gray

$brand-primary = $blue
$brand-secondary = $blue-light
$brand-success = $green
$brand-warning = $yellow
$brand-danger = $red

$primaryColor = lightseagreen
$secondaryColor = lightcoral

// Monochrome
$monochrome-0 = $white
$monochrome-1 = $gray-almostWhite
$monochrome-2 = $gray-lighter
$monochrome-3 = $gray-light
$monochrome-4 = $gray
$monochrome-5 = $gray-dark
$monochrome-6 = $gray-darker
$monochrome-7 = $gray-almostBlack
$monochrome-8 = $black



// 2. Spaces
// --------------------------------------------------

$space = 20px



// 3. Typography
// --------------------------------------------------

$text-size = 62.5%;
$base-font-size = 10



// 4. Fonts
// --------------------------------------------------

$font-default = 'Arial'

@font-face
  font-family "Abel"
  font-style normal
  src url("/assets/css/fonts/Abel-Regular.ttf")

@font-face
  font-family "Zilla Slab Highlight"
  font-style normal
  src url("/assets/css/fonts/ZillaSlabHighlight-Regular.ttf")

@font-face
  font-family "Unica One"
  font-style normal
  src url("/assets/css/fonts/UnicaOne-Regular.ttf")



// 5. Dimensions
// -------------------------------------------------
$container-width = 1280px
