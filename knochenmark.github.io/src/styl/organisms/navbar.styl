nav.home-navigation
  display flex
  flex-direction column
  justify-content center
  align-items center
  font-weight 600
  font-size 1.5rem
  text-transform uppercase
  letter-spacing 1px
  padding-bottom: 2rem
  .nav-item
    display flex
    justify-content center
    align-items center
    width 100%
    height 3.5rem
    border-bottom 1px solid #f0f0f0
    &:first-child
      border-top 1px solid #f0f0f0
    a
      color #999
      height 1.5rem
      line-height 3.5rem
      height 100%
      width 100%
      text-align center
      vertical-align middle
      font-size 1.2rem
      font-weight 600
      &:hover
        background-color rgba(255,255,255,0.2)
        color $primaryColor
