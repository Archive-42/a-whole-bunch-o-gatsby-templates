{
  "name": "portfolio-v2",
  "description": "Home of lekoarts.de",
  "version": "1.0.0",
  "private": true,
  "author": "LekoArts <hello@lekoarts.de>",
  "license": "GPLv3",
  "workspaces": [
    "packages/*",
    "www"
  ],
  "scripts": {
    "develop": "yarn workspace www develop",
    "clean": "yarn workspace www clean",
    "build": "yarn workspace www build",
    "serve": "yarn workspace www serve",
    "tsc": "tsc",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ignore-path .gitignore --ignore-path .prettierignore --ext .ts,.tsx,.js",
    "lint:fix": "yarn lint --fix",
    "format": "prettier \"**/*.{md,mdx,json,yaml}\" --write",
    "new-post": "ts-node packages/scripts/new-post.ts",
    "new-garden": "ts-node packages/scripts/new-garden.ts",
    "prepare": "husky install",
    "test": "jest",
    "test:update": "jest --updateSnapshot",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --runInBand"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.13.0",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.6",
    "@types/lodash": "^4.14.169",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.0.2",
    "@types/react": "^17.0.5",
    "@types/react-dom": "^17.0.4",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "babel-jest": "^26.6.3",
    "babel-preset-gatsby": "^1.5.0",
    "eslint": "^7.26.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0",
    "ts-node": "^9.1.1",
    "ts-jest": "^26.5.6",
    "typescript": "^4.2.4"
  }
}
