{
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "removeComments": false,
    "outDir": "./",
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true
  },
  "files": ["node_modules/gatsby/index.d.ts"]
}